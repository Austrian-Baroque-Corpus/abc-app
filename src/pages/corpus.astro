---
import SingleImage from "../components/SingleImage.astro";
import TextImage from "../components/TextImage.astro";
import { Content } from "../content/corpus/index.mdx";
import Page from "../layouts/Page.astro";
import { createBaseurl } from "../lib/baseurl.ts";
---

<Page title="Corpus">
	<h1 class="my-6 bg-abacus p-0">
		<img src={createBaseurl("Corpus-Button.jpg")} alt="Corpus Button" />
	</h1>
	<Content components={{ SingleImage: SingleImage, TextImage: TextImage }} />
</Page>
<style is:global>
	p {
		padding: 0.5rem 0;
		text-align: justify;
	}
</style>
