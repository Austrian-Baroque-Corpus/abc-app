---
import { createBaseurl } from "../lib/baseurl";

const { textcolor } = Astro.props;
---

<div class="mx-auto max-w-7xl p-4 sm:px-6 lg:px-8">
	<div class="relative flex items-center justify-between">
		<div class="absolute inset-y-0 left-0 hidden items-center sm:flex">
			<button
				type="button"
				class="relative inline-flex rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
				aria-controls="mobile-menu"
				aria-expanded="false"
			>
				<span class="absolute -inset-0.5"></span>
				<span class="sr-only">Open main menu</span>
				<svg
					class="block size-6"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
				</svg>
				<svg
					class="hidden size-6"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					aria-hidden="true"
				>
					<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>
		<div class="flex flex-1 items-center sm:justify-center">
			<div class="float-left flex shrink-0 content-start">
				<a href={createBaseurl("")} aria-label="Index">
					<img
						class="inline h-14 w-auto"
						src={createBaseurl("Logo_A_v3_resize65.png")}
						alt="Wiener Diarium Logo"
					/>
					<h1 class="ml-2 mt-2 inline align-middle font-segoe text-5xl font-bold">BaC:us</h1>
				</a>
				<p class="p-4 font-bold text-yellow-300">
					<span>in Arbeit</span>
				</p>
			</div>
			<div class="absolute right-2 ml-6 block sm:hidden">
				<div class="flex space-x-4">
					<a
						href={createBaseurl("corpus")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						Corpus
					</a>
					<a
						href={createBaseurl("search")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						Mensch! probier es
					</a>
					<a
						href={createBaseurl("annotation")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						Annotation
					</a>
					<a
						href={createBaseurl("nutzung")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						Nutzbarkeit
					</a>
					<a
						href={createBaseurl("zitieren-kontakt")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						merckts wohl
					</a>
					<a
						href={createBaseurl("ueber-uns")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						über uns
					</a>
					<a
						href={createBaseurl("dank")}
						class={`block px-2 text-lg ${textcolor}`}
						role="menuitem"
						tabindex="-1"
					>
						Dank!
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="hidden" id="mobile-menu">
	<div class="space-y-1 px-2 pb-3 pt-2 text-center">
		<a
			href={createBaseurl("corpus")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			Corpus
		</a>
		<a
			href={createBaseurl("abacus")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			Mensch! probier es
		</a>
		<a
			href={createBaseurl("annotation")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			Annotation
		</a>
		<a
			href={createBaseurl("nutzung")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			Nutzbarkeit
		</a>
		<a
			href={createBaseurl("zitieren-kontakt")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			merckts wohl
		</a>
		<a
			href={createBaseurl("ueber-uns")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			über uns
		</a>
		<a
			href={createBaseurl("dank")}
			class={`block px-2 text-lg ${textcolor}`}
			role="menuitem"
			tabindex="-1"
		>
			Dank!
		</a>
	</div>
</div>
<script>
	const btn = document.querySelector('button[aria-controls="mobile-menu"]');
	btn?.addEventListener("click", () => {
		const menu = document.querySelector("#mobile-menu");
		const expanded = menu?.getAttribute("aria-expanded") === "true" || false;
		menu?.setAttribute("aria-expanded", String(!expanded));
		menu?.classList.toggle("hidden");
	});
</script>
