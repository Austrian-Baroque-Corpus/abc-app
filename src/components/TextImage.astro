---
import { Image } from "astro:assets";

import { createBaseurl } from "../lib/baseurl.ts";

interface Props {
	image: string;
	text: string;
	image_alt: string;
	link: string;
}

const { image, text, image_alt, link } = Astro.props;
---

<div class="my-4 flex flex-row">
	<section class="basis-2/12 items-center border-gray-200 py-2 align-middle text-base">
		{
			(
				<a href={link}>
					{typeof image === "string" ? (
						<img src={createBaseurl(image.slice(1))} alt={image_alt} />
					) : (
						<Image src={image} alt={image_alt} format="avif" quality="mid" />
					)}
				</a>
			)
		}
	</section>
	<article class="basis-10/12 pl-4 text-justify text-base">
		{text}
		<slot />
	</article>
</div>

<style>
	article :global(a) {
		color: rgb(220 38 38);
	}
</style>
