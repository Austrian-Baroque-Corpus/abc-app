---
// import { createBaseurl } from "../lib/baseurl";
import EditionEditor from "./EditionEditor.astro";

const { textcolor, backgroundcolor, width, issue, source, name } = Astro.props;

function verifyArche() {
	const format = "?format=raw";
	const url = "https://id.acdh.oeaw.ac.at/abacus/";
	const doc = "ed__" + name.replace(".html", ".xml");
	return url + doc + format;
}
---

<aside class=`${width} ${backgroundcolor} ${textcolor} z-10`>
	<div class="sticky top-1 flex justify-end p-1 text-right">
		<ul>
			<li>
				<a
					class="open text-white"
					id="aside-button"
					aria-label="Schließen"
					role="button"
					aria-controls="edition-aside"
					aria-label="Öffnen/Schließen"
					title="Öffnen/Schließen"
					><svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
						<path
							fill-rule="evenodd"
							d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"
						></path>
					</svg></a
				>
			</li>
			<li>
				<a
					id="show-on-scroll"
					href="#abc_page_title"
					aria-label="Zurück zur ersten Seite"
					class="fade pt-2 text-white"
				>
					<svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
						<path
							fill-rule="evenodd"
							d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm8.5 9.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707z"
						></path>
					</svg>
				</a>
			</li>
		</ul>
	</div>
	<div class="active sticky top-16" id="edition-aside">
		<div class="flex items-center justify-center text-center text-white">
			<div class="p-4">
				<h1 class="text-xl font-bold sm:text-lg md:text-lg">{issue}</h1>
				<p class="text-sm">
					{source}
				</p>
				<p class="mt-4 flex justify-center">
					<a href={verifyArche()} aria-label="Download" target="_blank">
						<svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
							<path
								d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"
							></path>
							<path
								d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"
							></path>
						</svg>
					</a>
				</p>
			</div>
		</div>
		<EditionEditor />
	</div>
</aside>
