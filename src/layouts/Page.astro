---
import "@fontsource-variable/inter/standard.css";
import "tailwindcss/tailwind.css";

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
// import MatomoAnalytics from "../components/MatomoAnalytics.astro";
import { baseurl, createBaseurl } from "../lib/baseurl.js";

const backgroundcolor = "bg-stone-400";
const githuburl = "https://github.com/Austrian-Baroque-Corpus/";
const textcolor = "text-stone-700";
const { title } = Astro.props;
// const matomoUrl = "https://matomo.acdh.oeaw.ac.at/";
// const siteId = 99999;
---

<html lang="de">
	<head>
		<BaseHead title={title} />
	</head>
	<body class="flex min-h-screen flex-col justify-between">
		<header id="header">
			<Header backgroundcolor={backgroundcolor} baseurl={baseurl} />
		</header>
		<main class="container mx-auto mb-auto max-w-[1400px] font-antiqua" id="main">
			<div class="grid grid-cols-2 sm:grid-cols-1 md:grid-cols-1">
				<div class="p-4">
					<slot />
				</div>
				<div class="p-4">
					<div class="py-6">
						<a href={createBaseurl("search")}>
							<img
								class="max-w-[600px] rounded-md sm:max-w-[300px] md:max-w-[400px]"
								src={createBaseurl("intro_image.jpg")}
								alt="Austrian Baroque Corpus"
							/></a
						>
					</div>
				</div>
			</div>
		</main>
		<Footer
			backgroundcolor="bg-white"
			github_url={githuburl}
			textcolor={textcolor}
			baseurl={baseurl}
		/>
		<!-- <MatomoAnalytics matomoUrl={matomoUrl} siteId={siteId} /> -->
	</body>
</html>
