---

<html lang="de">
	<head>
		<BaseHead title={title} />
	</head>
	<body class="flex min-h-screen flex-col justify-between overflow-hidden">
		<header id="header" class="sticky top-0 z-50">
			<Header backgroundcolor={backgroundcolor} baseurl={baseurl} />
		</header>
		<main
			class="container mx-auto mb-auto max-w-full font-antiqua"
			id="main"
			style="overflow: hidden; max-height: calc(100vh - 129px); scrollbar-width: thin;"
		>
			<slot />
		</main>
		<!-- Reduced footer for search page -->
